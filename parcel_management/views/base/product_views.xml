<odoo>
  <data>
    <record id="form_view_parcel_product_template" model="ir.ui.view">
      <field name="name">product.template.form.parcel</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="priority">99</field>
      <field name="arch" type="xml"> 
        <xpath expr="//div[@name='options']" position="attributes">
            <attribute name="class">o_hidden</attribute>
        </xpath>
        <field name="type" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
      </field>
    </record>

    <record id="action_parcel_show_product"  model="ir.actions.act_window">
      <field name="name">Products</field>
      <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1, "default_type": "service", "default_sale_ok": True}</field>
      <field name="domain">[('sale_ok', '=', True), ('type', '=', 'service')]</field>
      <field name="res_model">product.template</field>
      <field name="view_mode">list,form</field>
      <field name="views" eval="[
          (ref('product.product_template_tree_view'), 'list'), 
          (ref('form_view_parcel_product_template'), 'form')
      ]"/>
    </record>

    <menuitem id="parcel_menu_product" parent="parcel_menu_parameter" name="Service fees" sequence="11" action="action_parcel_show_product"/>

  </data>
</odoo>