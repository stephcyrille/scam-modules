<odoo>
  <data>
    <record id="form_view_parcel_city" model="ir.ui.view">
      <field name="name">parcel.city.form</field>
      <field name="model">parcel.city</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" />
            </group>
            <group>
              <group>
                <field name="country_id" />
              </group>
              <group>
                <field name="state_id" domain="[('country_id', '=', country_id)]" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="list_view_parcel_city" model="ir.ui.view">
        <field name="name">parcel.city.list</field>
        <field name="model">parcel.city</field>
        <field name="arch" type="xml">
            <list string="City vue liste" multi_edit="1" sample="1">
              <field name="name" />
              <field name="country_id" />
              <field name="state_id" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_parcel_city">
      <field name="name">Cities</field>
      <field name="res_model">parcel.city</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>